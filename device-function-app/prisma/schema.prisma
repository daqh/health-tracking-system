generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DeviceType {
  id      Int      @id @default(autoincrement())
  name    String
  devices Device[]
}

model Device {
  id               Int        @id @default(autoincrement())
  connectionString String
  deviceTypeId     Int
  DeviceType       DeviceType @relation(fields: [deviceTypeId], references: [id])
}
